# Telegram Media Server Configuration
# Конфигурация Telegram Media Server

# =============================================================================
# REQUIRED SETTINGS / ОБЯЗАТЕЛЬНЫЕ НАСТРОЙКИ
# =============================================================================

# Telegram Bot Token (required)
# Токен Telegram бота (обязательно)
BOT_TOKEN=your_telegram_bot_token_here

# Path to media directory (required)
# Путь к директории с медиафайлами (обязательно)
MOVIE_PATH=/path/to/your/media/directory

# Admin password (required, minimum 8 characters)
# Пароль администратора (обязательно, минимум 8 символов)
ADMIN_PASSWORD=your_secure_admin_password

# =============================================================================
# OPTIONAL SETTINGS / НЕОБЯЗАТЕЛЬНЫЕ НАСТРОЙКИ
# =============================================================================

# Regular user password (optional, uses ADMIN_PASSWORD if not set)
# Пароль обычного пользователя (необязательно, использует ADMIN_PASSWORD если не задан)
REGULAR_PASSWORD=

# Language (default: en)
# Язык (по умолчанию: en)
LANG=en

# Log level (default: info)
# Уровень логирования (по умолчанию: info)
LOG_LEVEL=info

# Path to language files (default: /usr/local/share/telegram-media-server/locales)
# Путь к файлам локализации (по умолчанию: /usr/local/share/telegram-media-server/locales)
LANG_PATH=/usr/local/share/telegram-media-server/locales

# =============================================================================
# PROXY SETTINGS / НАСТРОЙКИ ПРОКСИ
# =============================================================================

# Proxy URL (optional)
# URL прокси (необязательно)
PROXY=

# Proxy host (optional)
# Хост прокси (необязательно)
PROXY_HOST=

# =============================================================================
# PROWLARR SETTINGS / НАСТРОЙКИ PROWLARR
# =============================================================================

# Prowlarr URL (optional, for torrent search)
# URL Prowlarr (необязательно, для поиска торрентов)
PROWLARR_URL=

# Prowlarr API Key (optional, for torrent search)
# API ключ Prowlarr (необязательно, для поиска торрентов)
PROWLARR_API_KEY=

# =============================================================================
# DOWNLOAD SETTINGS / НАСТРОЙКИ ЗАГРУЗКИ
# =============================================================================

# Maximum concurrent downloads (default: 3)
# Максимальное количество одновременных загрузок (по умолчанию: 3)
MAX_CONCURRENT_DOWNLOADS=3

# Download timeout (default: 0 = infinite)
# Таймаут загрузки (по умолчанию: 0 = бесконечный)
DOWNLOAD_TIMEOUT=0

# Progress update interval (default: 5s)
# Интервал обновления прогресса (по умолчанию: 5s)
PROGRESS_UPDATE_INTERVAL=5s
